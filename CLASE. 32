#include <stdio.h>

int main() 
{
    int N, M, i, sumaPares = 0, sumaImpares = 0;
    printf("Ingrese el valor de N: ");
    scanf("%d", &N);
    printf("Ingrese el valor de M: ");
    scanf("%d", &M);
    for (i = N; i <= M; i++) 
	{
        if (i % 2 == 0) 
		{
            sumaPares += i;
        } 
		else 
		{
            sumaImpares += i;
        }
    }

    printf("La suma de los números pares entre %d y %d es: %d\n", N, M, sumaPares);
    printf("La suma de los números impares entre %d y %d es: %d\n", N, M, sumaImpares);
    getch (); 
    return 0;
}
