#include <stdio.h>

int main() 
{
    int n, i;
    float numero, suma = 0, promedio;
    printf("Ingrese la cantidad de números : ");
    scanf("%d", &n);
    for (i = 1; i <= n; i++) 
	{
        printf("Ingrese el número %d: ", i);
        scanf("%f", &numero);
        suma += numero;
    }
    promedio = suma / n;
    printf("El promedio de los %d números ingresados es: %.2f\n", n, promedio);
    getch ();
    return 0;
}
