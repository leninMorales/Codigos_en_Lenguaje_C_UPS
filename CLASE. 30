#include <stdio.h>
int main() 
{
    int M, N, i, sumatoria = 0;
    printf("Ingrese el valor de M: ");
    scanf("%d", &M);
    printf("Ingrese el valor de N: ");
    scanf("%d", &N);

    if (M % 2 != 0) 
	{
        M=M+1;
    }
    for (i = M; i <= N; i += 2) 
	{
        sumatoria += i;
    }
    printf("La sumatoria de los nÃºmeros pares de %d a %d es: %d\n", M, N, sumatoria);
    getch ();
    return 0;
}
